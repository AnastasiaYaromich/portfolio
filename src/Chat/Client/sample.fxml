<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ListView?>

<?import java.net.URL?>


<?import javafx.scene.control.Label?>
<VBox fx:controller="Chat.Client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <stylesheets><URL value="@/css/Style.css"/></stylesheets>

    <HBox fx:id="upperPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="loginField"/>
        <PasswordField promptText="Пароль" fx:id="passwordField" onAction="#tryToAuth"/>
        <Button text="Auth" fx:id = "authButton" onAction="#tryToAuth"/>
    </HBox>


    <HBox VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS">
            <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS"/>

            <HBox fx:id="bottomPanel" managed="false" visible="false">
                <VBox fx:id="chatBox" VBox.vgrow="ALWAYS"/>

                <TextField fx:id="textField" HBox.hgrow="ALWAYS"
                           promptText="Введите сообщение..." onAction="#sendMsg"/>
                <Button fx:id="sendButton" text="Send" onAction="#sendMsg"/>
            </HBox>
        </VBox>
        <ListView fx:id="clientsList" prefWidth="350" managed="false" visible="false"/>
        <!--                  onMouseClicked="#selectClient"-->
        <!--                  prefWidth="200" />-->

    </HBox>

</VBox>